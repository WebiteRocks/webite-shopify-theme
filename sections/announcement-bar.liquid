<div class="uk-navbar-container uk-light uk-visible@m tm-toolbar-container">
  <div class="uk-container uk-navbar" uk-navbar="">
    <div class="uk-navbar-left">
      <nav>
        <ul class="uk-navbar-nav">
          {% if section.settings.show_phone and section.settings.phone != blank %}
          <li><a href="tel:{{ section.settings.phone | remove: ' ' }}"><span class="uk-margin-xsmall-right uk-icon" uk-icon="icon: receiver; ratio: .75;"></span><span class="tm-pseudo">{{ section.settings.phone }}</span></a></li>
          {% endif %}
          {% if section.settings.show_location %}
          <li><a href="{{ section.settings.contact_page_url | default: '/pages/contact' }}" onclick="return false"><span class="uk-margin-xsmall-right uk-icon" uk-icon="icon: location; ratio: .75;"></span><span class="tm-pseudo">{{ section.settings.location_label | default: shop.name }}</span><span uk-icon="icon: triangle-down; ratio: .75;" class="uk-icon"></span></a>
            <div class="uk-margin-remove uk-drop" uk-drop="mode: click; pos: bottom-center;">
              <div class="uk-card uk-card-default uk-card-small uk-box-shadow-xlarge uk-overflow-hidden uk-padding-small uk-padding-remove-horizontal uk-padding-remove-bottom">
                <div class="uk-card-body">
                  <div class="uk-text-small">
                    {% if section.settings.store_name != blank %}
                    <div class="uk-text-bolder">{{ section.settings.store_name }}</div>
                    {% endif %}
                    {% if section.settings.store_address != blank %}
                    <div>{{ section.settings.store_address }}</div>
                    {% endif %}
                    {% if section.settings.store_hours != blank %}
                    <div>{{ section.settings.store_hours }}</div>
                    {% endif %}
                  </div>
                  {% if section.settings.contact_page_url != blank %}
                  <div class="uk-margin-small"><a class="uk-link-muted uk-text-uppercase tm-link-to-all uk-link-reset" href="{{ section.settings.contact_page_url }}"><span>contacts</span><span uk-icon="icon: chevron-right; ratio: .75;" class="uk-icon"></span></a>
                  </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </li>
          {% endif %}
          {% if section.settings.show_hours and section.settings.store_hours != blank %}
          <li>
            <div class="uk-navbar-item"><span class="uk-margin-xsmall-right uk-icon" uk-icon="icon: clock; ratio: .75;"></span>{{ section.settings.store_hours }}
            </div>
          </li>
          {% endif %}
        </ul>
      </nav>
    </div>
    <div class="uk-navbar-right">
      <nav>
        <ul class="uk-navbar-nav">
          {% if section.settings.menu != blank %}
            {% for link in linklists[section.settings.menu].links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcement bar",
  "class": "section-announcement-bar",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "checkbox",
      "id": "show_phone",
      "label": "Show phone number",
      "default": true
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone number",
      "default": "8 800 799 99 99"
    },
    {
      "type": "checkbox",
      "id": "show_location",
      "label": "Show location dropdown",
      "default": true
    },
    {
      "type": "text",
      "id": "location_label",
      "label": "Location label",
      "default": "Store Location"
    },
    {
      "type": "checkbox",
      "id": "show_hours",
      "label": "Show hours in navbar",
      "default": true
    },
    {
      "type": "header",
      "content": "Store Details (for dropdown)"
    },
    {
      "type": "text",
      "id": "store_name",
      "label": "Store name",
      "default": "Store Name"
    },
    {
      "type": "text",
      "id": "store_address",
      "label": "Store address",
      "default": "123 Main Street, City"
    },
    {
      "type": "text",
      "id": "store_hours",
      "label": "Store hours",
      "default": "Daily 10:00â€“22:00"
    },
    {
      "type": "url",
      "id": "contact_page_url",
      "label": "Contact page link"
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "footer",
      "info": "Select a menu to display on the right side"
    }
  ],
  "presets": [
    {
      "name": "Announcement bar",
      "category": "Header"
    }
  ],
  "enabled_on": {
    "groups": ["header"]
  }
}
{% endschema %}
