<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    {% render 'meta-tags' %}
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="dns-prefetch" href="https://cdn.shopify.com">
    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- comment -%} LCP Image Preload - Early in head for fastest discovery {%- endcomment -%}
    {%- if request.page_type == 'product' -%}
      {%- assign lcp_media = product.selected_or_first_available_variant.featured_media | default: product.featured_media -%}
      {%- if lcp_media -%}
        <link rel="preload" as="image" fetchpriority="high" href="{{ lcp_media.preview_image | image_url: width: 600 }}" imagesrcset="{{ lcp_media.preview_image | image_url: width: 400 }} 400w, {{ lcp_media.preview_image | image_url: width: 600 }} 600w, {{ lcp_media.preview_image | image_url: width: 800 }} 800w" imagesizes="(min-width: 1200px) 600px, (min-width: 768px) 50vw, 100vw">
      {%- endif -%}
    {%- endif -%}

    {% render 'critical-css' %}
    
    {{ 'uikit.min.css' | asset_url | stylesheet_tag: preload: true }}
    {% render 'css-vars' %}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    
    {{ content_for_header }}
    
    <script src="{{ 'uikit.min.js' | asset_url }}" defer></script>
  </head>

  <body>

    <header>
      {% sections 'header-group' %}   
    </header>

    <main role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>
    {% sections 'footer-group' %}

    {% section 'side-nav' %}
    {% section 'side-cart' %}
    {% render 'product-quick-view' %}

    <!-- Shopify money for all currencies -->
    <script src="{{ 'shopify-money.js' |  asset_url }}" defer></script>
    <script src="{{ 'uikit-icons.min.js' | asset_url }}" defer></script>
    <script type="application/json" data-ajax-cart-initial-state>
      {{ cart | json }}
    </script>
    <script type="module" src="{{ 'liquid-ajax-cart-v2.2.0.js' | asset_url }}" defer></script>
    <script src="{{ 'cart-scripts.js' | asset_url }}" defer></script>
  </body>
</html>
