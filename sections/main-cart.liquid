<style>
    .cart__item{
        display: flex;
        padding: 10px;
        border-bottom: 1px solid var(--color-border);
    }
    .cart__total{
        font-size: 20px;
        padding: 10px;
    }
    .cart__item-image{
        width: 50px;
        height: 50px;
        margin-right: 10px;
    }
</style>

<div class="cart__items">
    <!-- Loop through each item in the cart -->
    {% for item in cart.items %}
        <div class="cart__item">
            <img class="cart__item-image" src="{{ item.image.src | img_url: '50x50' }}" alt="{{ item.title }}" />
            <div>
                <div class="cart__item-title">{{ item.title }}</div>
                <div class="cart__item-quantity">{{ 'cart.quantity' | t }} {{ item.quantity }}</div>
                <div class="cart__item-price">{{ 'cart.price' | t }} {{ item.price | money }}</div>
            </div>
        </div>
    {% endfor %}
</div>

<div class="cart__total">
    <!-- Use money filter to properly format total price -->
    {{ 'cart.total' | t }} {{ cart.total_price | money }}
</div>

{% schema %}
{
  "name": "Cart",
  "tag": "section",
  "class": "main-cart",
  "settings": [
  ],
  "presets": [
    {
      "name": "Cart",
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}