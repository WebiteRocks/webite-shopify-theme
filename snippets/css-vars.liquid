{%- comment -%}
  CSS Custom Properties for UIkit Hybrid Approach
  ===============================================
  These CSS variables override the SASS compiled values.
  Values come from Shopify Theme Settings (Customize > Theme Settings).
{%- endcomment -%}

{%- liquid
  # Get font settings
  assign body_font = settings.font_body
  assign heading_font = settings.font_heading
-%}

<style>
  {{ body_font | font_face: font_display: 'swap' }}
  {{ heading_font | font_face: font_display: 'swap' }}

  :root {
    /* ========================================
       GLOBAL CSS CUSTOM PROPERTIES
       ======================================== */

    /* Text Colors */
    --global-color: {{ settings.color_text }};
    --global-emphasis-color: {{ settings.color_text_emphasis }};
    --global-heading-color: {{ settings.color_text_emphasis }};
    --global-muted-color: {{ settings.color_text_muted }};
    --global-inverse-color: #fff;

    /* Primary & Secondary Colors */
    --global-primary-color: {{ settings.color_primary }};
    --global-secondary-color: {{ settings.color_secondary }};

    /* Background Colors */
    --global-background: {{ settings.color_background }};
    --global-muted-background: {{ settings.color_background_muted }};
    --global-primary-background: {{ settings.color_primary }};
    --global-secondary-background: {{ settings.color_secondary }};
    --global-success-background: {{ settings.color_success }};
    --global-warning-background: {{ settings.color_warning }};
    --global-danger-background: {{ settings.color_danger }};

    /* Status Colors */
    --global-success-color: {{ settings.color_success }};
    --global-warning-color: {{ settings.color_warning }};
    --global-danger-color: {{ settings.color_danger }};

    /* Links */
    --global-link-color: {{ settings.color_link }};
    --global-link-hover-color: color-mix(in srgb, {{ settings.color_link }} 80%, black);

    /* Borders */
    --global-border: {{ settings.color_border }};

    /* Typography */
    --global-font-family: {{ body_font.family }}, {{ body_font.fallback_families }};
    --global-heading-font-family: {{ heading_font.family }}, {{ heading_font.fallback_families }};

    /* Border Radius */
    --global-border-radius: {{ settings.border_radius }}px;

    /* Margins */
    --global-margin-small: {{ settings.margin_small }}px;
    --global-margin: {{ settings.margin_default }}px;
    --global-margin-medium: {{ settings.margin_medium }}px;
    --global-margin-large: {{ settings.margin_large }}px;
    --global-margin-xlarge: {{ settings.margin_xlarge }}px;

    /* Paddings */
    --global-padding-small: {{ settings.padding_small }}px;
    --global-padding: {{ settings.padding_default }}px;
    --global-padding-large: {{ settings.padding_large }}px;

    /* Section Paddings */
    --section-padding-small: {{ settings.section_padding_small }}px;
    --section-padding: {{ settings.section_padding_default }}px;
    --section-padding-large: {{ settings.section_padding_large }}px;
    --section-padding-xlarge: {{ settings.section_padding_xlarge }}px;

    /* Container Widths */
    --container-max-width: {{ settings.container_max_width }}px;
    --container-large-max-width: {{ settings.container_large_max_width }}px;
    --container-xlarge-max-width: {{ settings.container_xlarge_max_width }}px;
    --container-small-max-width: {{ settings.container_small_max_width }}px;
    --container-xsmall-max-width: {{ settings.container_xsmall_max_width }}px;
  }
</style>